<?xml version="1.0" encoding="UTF-8"?>
<taskGenerationGuide>
    <metadata>
        <authorNote>The resulting template file artifact (tasks.md) should remain in markdown format for the sake of being human-readable.</authorNote>
    </metadata>

    <overview>
        <description>This guide focuses on converting repository analysis into actionable tasks using aider's architect mode. It emphasizes creating a clear, immutable task list that will guide implementation in code mode.</description>
    </overview>

    <modeRequirements>
        <initialTaskGeneration>
            <command>aider --architect /path/to/repo</command>
            <alternativeCommand>
                <context>within an active session</context>
                <command>/chat-mode architect</command>
            </alternativeCommand>
        </initialTaskGeneration>
        
        <implementation>
            <context>after tasks.md creation</context>
            <command>aider --chat-mode code /path/to/repo</command>
            <alternativeCommand>
                <context>within an active session</context>
                <command>/chat-mode code</command>
            </alternativeCommand>
        </implementation>
    </modeRequirements>

    <analysisToTasksConversion status="incomplete">
        <reviewAnalysisFindings status="incomplete">
            <task>Consolidate exploration notes</task>
            <task>Review identified components</task>
            <task>List key implementation needs</task>
            <task>Note technical requirements</task>
        </reviewAnalysisFindings>

        <taskIdentification status="incomplete">
            <componentTasks>
                <task>List required changes</task>
                <task>Identify implementation tasks</task>
                <task>Note testing requirements</task>
                <task>Document dependencies</task>
            </componentTasks>
            <interfaceTasks>
                <task>List API requirements</task>
                <task>Note integration needs</task>
                <task>Document validation tasks</task>
            </interfaceTasks>
        </taskIdentification>

        <taskOrganization status="incomplete">
            <task>Group related tasks</task>
            <task>Establish dependencies</task>
            <task>Set priority levels</task>
            <task>Define completion criteria</task>
        </taskOrganization>
    </analysisToTasksConversion>

    <tasksMdGeneration status="incomplete">
        <structureDefinition status="incomplete">
            <task>Create clear categories</task>
            <task>Establish tracking format</task>
            <task>Define priority system</task>
            <task>Document dependencies</task>
        </structureDefinition>

        <taskDocumentation status="incomplete">
            <perTaskRequirements>
                <requirement>Write clear description</requirement>
                <requirement>List acceptance criteria</requirement>
                <requirement>Note dependencies</requirement>
                <requirement>Specify required resources</requirement>
                <requirement>Define completion checklist</requirement>
            </perTaskRequirements>
        </taskDocumentation>

        <implementationOrder status="incomplete">
            <task>Create dependency graph</task>
            <task>Establish task sequence</task>
            <task>Note parallel opportunities</task>
            <task>Document blockers</task>
        </implementationOrder>
    </tasksMdGeneration>

    <taskValidation status="incomplete">
        <completenessCheck status="incomplete">
            <task>Verify all components covered</task>
            <task>Check interface requirements</task>
            <task>Confirm testing coverage</task>
            <task>Validate dependencies</task>
        </completenessCheck>

        <clarityReview status="incomplete">
            <task>Check task descriptions</task>
            <task>Verify acceptance criteria</task>
            <task>Confirm resource requirements</task>
            <task>Validate completion steps</task>
        </clarityReview>

        <finalVerification status="incomplete">
            <task>Review entire task set</task>
            <task>Confirm scope boundaries</task>
            <task>Verify task independence</task>
            <task>Check for completeness</task>
        </finalVerification>
    </taskValidation>

    <tasksMdFormat>
        <requiredSections>
            <overview>
                <element>Project scope</element>
                <element>Goals and objectives</element>
                <element>Key constraints</element>
            </overview>
            <taskCategories>
                <category>Implementation tasks</category>
                <category>Testing requirements</category>
                <category>Documentation needs</category>
                <category>Integration tasks</category>
            </taskCategories>
            <perTaskFormat>
                <structure>
                    <taskName status="incomplete"/>
                    <description>Clear task description</description>
                    <priority type="enum">High/Medium/Low</priority>
                    <dependencies>List of dependent tasks</dependencies>
                    <acceptanceCriteria>
                        <criterion status="incomplete">Criterion 1</criterion>
                        <criterion status="incomplete">Criterion 2</criterion>
                    </acceptanceCriteria>
                    <resources>
                        <item>Required tools</item>
                        <item>Reference materials</item>
                    </resources>
                </structure>
            </perTaskFormat>
        </requiredSections>
    </tasksMdFormat>

    <importantRules>
        <tasksMdImmutability>
            <rule>Once created, tasks.md becomes an immutable contract</rule>
            <rule>No new tasks can be added after creation</rule>
            <rule>No scope changes are permitted</rule>
            <rule>Only completion status can be updated [â¬œ] -> [x]</rule>
        </tasksMdImmutability>

        <scopeManagement>
            <rule>All tasks must be identified before finalization</rule>
            <rule>No feature creep allowed after creation</rule>
            <rule>No additional requirements can be added</rule>
            <rule>All dependencies must be identified upfront</rule>
        </scopeManagement>

        <implementationGuidelines>
            <rule>Tasks must be implemented as defined</rule>
            <rule>No scope expansion during coding</rule>
            <rule>Stay within defined boundaries</rule>
            <rule>Focus on completing defined tasks</rule>
        </implementationGuidelines>
    </importantRules>
</taskGenerationGuide>